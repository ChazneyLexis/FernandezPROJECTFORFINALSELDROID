<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/topLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/movieImageButton"
                android:layout_width="124dp"
                android:layout_height="126dp"
                android:padding="5dp"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/midLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topLL"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/movieIDTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: Sample ID"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/movieTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title: Sample Title"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/movieYearTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year: Sample Year"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/movieRuntimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Runtime: Sample Runtime"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/movieLanguageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language: Sample Language"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/movieReleaseDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release Date: Sample Date"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/movieCountryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country: Sample Country"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/midLL"/>

        <Button
            android:id="@+id/editButton"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:text="Save"
            android:textAllCaps="true"
            android:textColor="@color/Black" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:text="Save"
            android:textAllCaps="true"
            android:textColor="@color/Black" />

    </RelativeLayout>

</RelativeLayout>